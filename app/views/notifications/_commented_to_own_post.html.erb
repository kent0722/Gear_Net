<%= link_to transition_path(notification) do %>
  <div class="flex border-b-2 border-gray-700/30 w-full">
    <div class="py-3">
      <%= link_to user_profile_path(notification.subject.user) do %>
        <%= image_tag notification.subject.user.profile.image.present? ? notification.subject.user.profile.image : 'defaultUser.jpg', class: "object-cover rounded-full size-12 cursor-pointer" %>
      <% end %>
    </div>
    <div class="block md:flex items-center mt-6 md:mt-2 ml-2 md:ml-4 mb-2 text-xs md:text-base">
      <%= notification.subject.user.name %> があなたの
      <%= link_to '投稿', post_path(notification.subject.post), class: 'text-indigo-500 hover:text-indigo-600' %>にコメントしました
      <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
    </div>
  </div>
<% end %>