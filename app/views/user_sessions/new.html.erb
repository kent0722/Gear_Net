<div class="pt-36 mx-auto text-gray-600 bg-black/30 z-50 h-screen w-screen backdrop-blur-sm animate-fadeIn">
  <div class="bg-gray-100 mx-auto w-1/3 rounded-xl">
    <div class="flex flex-col items-center space-y-4">
      <%= link_to root_path, class: "ml-auto" do %>
        <div class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg w-8 h-8 inline-flex justify-center items-center">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
        </div>
      <% end %>
      <h1 class="pt-8 text-gray-900 text-2xl font-semibold">ログイン</h1>
      <%= form_with(url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email, class: 'block w-72 rounded-md mb-2', placeholder: 'メール',  required: true %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'block w-72 rounded-md mb-6', placeholder: 'パスワード',  required: true %>
  
        <%= f.submit "ログイン", class: 'w-full h-12 mb-8 text-white bg-indigo-500 hover:bg-indigo-600 rounded-3xl' %>

        <div class="mb-8 border-b-2 border-gray-500/30"></div>

        <%= f.submit "googleでログインする", class: 'w-full h-12 mb-8 bg-white border border-gray-500/70 hover:bg-sky-50 rounded-3xl' %>
        <p class='mb-8'>初めて利用する場合：
            <%= link_to 'ユーザー登録', new_user_path, class: 'text-indigo-500 hover:text-indigo-600' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
