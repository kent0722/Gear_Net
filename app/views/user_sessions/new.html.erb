<div class="flex fustify-center pt-16 md:pt-16 text-gray-600 bg-black/30 h-screen w-screen backdrop-blur-sm animate-fadeIn">
  <div class="bg-gray-100 mx-auto w-[350px] md:w-[500px] h-[500px] md:h-[550px] rounded-xl">
    <div class="flex flex-col items-center space-y-4">
      <%= link_to root_path, class: "ml-auto" do %>
        <div class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg w-8 h-8 inline-flex justify-center items-center">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
        </div>
      <% end %>
      <h1 class="text-gray-900 text-xl md:text-2xl font-semibold">ログイン</h1>
      <%= form_with(url: login_path) do |f| %>

        <%= f.label :email, class: 'ml-1 text-xs md:text-base' %>
        <%= f.text_field :email, class: 'block mx-auto w-[240px] md:w-[290px] rounded-md mb-2', placeholder: 'メール',  required: true %>

        <%= f.label :password, class: 'ml-1 text-xs md:text-base' %>
        <%= f.password_field :password, class: 'block mx-auto w-[240px] md:w-[290px] rounded-md mb-6', placeholder: 'パスワード',  required: true %>
        
        <div class="flex justify-center">
          <%= f.submit "ログイン", class: 'w-60 md:w-full h-12 mb-6 text-white bg-indigo-500 hover:bg-indigo-600 rounded-3xl' %>
        </div>
       
        <div class="mb-6 border-b-2 border-gray-500/30"></div>
        
        <div class="flex justify-center">
           <%# f.submit "googleでログインする", class: 'w-60 md:w-full h-12 mb-6 bg-white border border-gray-500/70 hover:bg-sky-50 rounded-3xl' %>
        </div>
        <p class="mb-2">
          <%= link_to 'パスワードを忘れた場合はこちら', new_password_reset_path, class: "text-sm no-underline hover:underline" %>
        </p>   
        <p class='text-sm md:text-base mb-2'>初めて利用する場合：
          <%= link_to 'ユーザー登録', new_user_path, class: 'text-indigo-500 hover:text-indigo-600 no-underline hover:underline' %>
        </p>
         <p class='text-sm md:text-base mb-2'>ゲストで利用する場合：
           <%= link_to 'ゲストログイン', '/guest_login', data: { turbo_method: :post }, class: 'text-indigo-500 hover:text-indigo-600 no-underline hover:underline' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
