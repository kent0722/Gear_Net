<div class="container mx-auto text-gray-600">
  <div class="bg-gray-100 ronded-lg w-1/3 mx-auto rounded-xl">
    <div class="flex flex-col items-center space-y-4 border-red-300">
      <h1 class="pt-8 text-gray-900 text-2xl font-semibold">新規作成</h1>
      <%= form_with(model: @user, url: users_path, method: "post") do |f| %>
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: 'block w-72 rounded-md mb-2', placeholder: 'name' %>

        <%= f.label :email, "Email" %>
        <%= f.text_field :email, class: 'block w-72 rounded-md mb-2', placeholder: 'email' %>

        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: 'block w-72 rounded-md mb-2', placeholder: 'password' %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'block w-72 rounded-md mb-6', placeholder: 'password_confirmation' %>

        <%= f.submit "登録する", class: 'w-full h-12 mb-8 text-white bg-indigo-500 hover:bg-indigo-600 rounded-3xl' %>

        <div class="mb-8 border-b-2 border-gray-500/30"></div>

        <%= f.submit "googleで登録する", class: 'w-full h-12 mb-8 bg-white border border-gray-500/70 hover:bg-sky-50 rounded-3xl' %>
        <p class='mb-8'>アカウントをお持ちの場合：
            <%= link_to 'ログイン', "#", class: 'text-indigo-500 hover:text-indigo-600' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
