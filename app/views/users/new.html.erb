<div class="absolute z-50 flex justify-center pt-5 md:pt-20 text-gray-600 bg-black/30 h-screen w-screen backdrop-blur-sm animate-fadeIn">
  <div class="bg-gray-100 mx-auto w-[350px] md:w-[520px] h-[650px] rounded-xl">
    <div class="flex flex-col items-center space-y-4 border-red-300">
     <%= link_to root_path, class: "ml-auto" do %>
        <div class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg w-8 h-8 inline-flex justify-center items-center">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
        </div>
      <% end %>
      <h1 class="text-gray-900 text-xl md:text-2xl font-semibold">ユーザー登録</h1>     
      <%= form_with(model: @user, url: users_path, method: "post") do |f| %>
        <div class="mb-2">
          <%= f.label :name, class: 'ml-4 md:ml-0 text-xs md:text-base' %>
          <%= f.text_field :name, class: 'block mx-auto w-[240px] md:w-[290px] rounded-md', placeholder: 'ユーザーネーム' %>
          <% @user.errors.where(:name).each do |name| %>
            <p class="text-red-500"><%= name.full_message %></p>
          <% end %>
        </div>
        <div class="mb-2">
          <%= f.label :email, class: 'ml-4 md:ml-0 text-xs md:text-base' %>
          <%= f.text_field :email, class: 'block mx-auto w-[240px] md:w-[290px] rounded-md', placeholder: 'メール' %>
          <% @user.errors.where(:email).each do |email| %>
            <p class="text-red-500"><%= email.full_message %></p>
          <% end %>
        </div>
        <div class="mb-2">
          <%= f.label :password, class: 'ml-4 md:ml-0 text-xs md:text-base' %>
          <%= f.password_field :password, class: 'block mx-auto w-[240px] md:w-[290px] rounded-md', placeholder: 'パスワード' %>
          <% @user.errors.where(:password).each do |password| %>
            <p class="text-red-500"><%= password.full_message %></p>
          <% end %>
        </div>
        <div class="mb-6">
          <%= f.label :password_confirmation, class: 'ml-4 md:ml-0 text-xs md:text-base' %>
          <%= f.password_field :password_confirmation, class: 'block mx-auto w-[240px] md:w-[290px] rounded-md', placeholder: 'パスワード(確認用)' %>
          <% @user.errors.where(:password_confirmation).each do |password_confirmation| %>
            <p class="text-red-500"><%= password_confirmation.full_message %></p>
          <% end %>
        </div>

        <%= f.submit "登録する", class: 'w-full h-12 mb-8 text-white bg-indigo-500 hover:bg-indigo-600 rounded-3xl' %>

        <div class="mb-8 border-b-2 border-gray-500/30"></div>

          <%# f.submit "googleで登録する", class: 'w-full h-12 mb-8 bg-white border border-gray-500/70 hover:bg-sky-50 rounded-3xl'  %>
        <p class='mb-8'>アカウントをお持ちの場合：
            <%= link_to 'ログイン', login_path, class: 'text-sm md:text-base text-indigo-500 hover:text-indigo-600' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
