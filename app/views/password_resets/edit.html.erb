<div class="flex justify-center pt-20 pb-36 md:pl-48 lg:pl-24 bg-black/30 h-screen w-screen backdrop-blur-sm animate-fadeIn">
  <div class="mx-auto min-w-[330px] max-w-[330px] md:min-w-[550px] md:max-w-[550px]">
    <div class="bg-gray-100 h-[330px] md:h-[360px] rounded-lg">
      <div class="w-full mx-auto">
        <div class="flex justify-end">
          <%= link_to root_path, class: "ml-auto" do %>
            <div class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg w-8 h-8 inline-flex justify-center items-center">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
            </div>
          <% end %>
        </div> 
        <div class="flex justify-center font-semibold text-xl md:text-2xl pt-8">
          パスワード再設定
        </div>
        <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
          <div class="flex justify-center pt-8 mb-2">
            <%= f.password_field :password, class: 'block w-[240px] md:w-[350px] rounded-md', placeholder: '新しいパスワード', required: true %>
          </div>
          <div class="flex justify-center pt-4">
            <%= f.submit "パスワードを更新", class: 'w-[240px] md:w-[350px] h-12 mb-6 text-white text-xs md:text-sm bg-indigo-500 hover:bg-indigo-600 rounded-xl' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
