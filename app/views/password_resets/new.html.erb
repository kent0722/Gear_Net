<div class="flex justify-center pt-20 pb-36 md:pl-48 lg:pl-24 bg-black/30 h-screen w-screen backdrop-blur-sm animate-fadeIn">
  <div class="mx-auto min-w-[330px] max-w-[330px] md:min-w-[550px] md:max-w-[550px]">
    <div class="bg-gray-100 h-[680px] md:h-[360px] rounded-lg">
      <div class="w-full mx-auto px-4">
        <div class="flex justify-center font-semibold text-2xl pt-16">
          パスワードリセット
        </div>
        <%= form_with url: password_resets_path do |f| %>
          <div class="pt-8 ml-20 mb-2 mx-auto">
            <%= f.text_field :email, class: 'block w-[240px] md:w-[350px] rounded-md', placeholder: 'メールアドレス' %>
          </div>
          <div class="flex justify-center pt-4">
            <%= f.submit "パスワードの再設定のメールを送信する", class: 'w-60 md:w-[350px] h-12 mb-6 text-white text-sm bg-indigo-500 hover:bg-indigo-600 rounded-xl' %>
          </div>
          <p class="flex justify-center text-sm"> 
            新しいアカウントを作成する場合は
            <%= link_to 'こちら', new_user_path, class: 'text-indigo-500 hover:text-indigo-600  no-underline hover:underline' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
